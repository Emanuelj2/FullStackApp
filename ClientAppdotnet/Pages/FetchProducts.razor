@page "/fetchproducts"
@using System.Net.Http.Headers
@using Microsoft.VisualBasic
@using System.Formats.Tar
@inject HttpClient Http
@using System.Net.Http.Json
@using System.Text.Json

<h3>
    Product List
</h3>

<ul>
    @if(products != null) //this means that if the list is not empty
    {
        foreach(var product in products)
        {
            <li>@product.Name - $@product.Price</li>
        }
    }
    else
    {
        <li>Loading...</li>
    }
</ul>


@code{
    
    private Product[]? products;

    protected override async Task OnInitializedAsync()
    {
        @* products = await Http.GetFromJsonAsync<Product[]>(
            "http://localhost:5267/api/productslist"
            ); *@

        try
        {
            products = await Http.GetFromJsonAsync<Product[]>("http://localhost:5267/api/productslist");
        }
        catch(Exception ex)
        {
            Console.WriteLine($"Error : {ex.Message}");
        }
    }

    public class Product
    {
        public int Id { get; set; }
        public string? Name { get; set; }
        public double Price {get; set; }
        public int Stock { get; set; }
        public Category? Category { get; set; }
    }

    public class Category
    {
        public int Id { get; set; }
        public string? Name { get; set; }
    }
}